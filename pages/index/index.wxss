/**index.wxss**/
.categoryList{
  width: 100%;
  height: 350rpx;
  border-bottom:20rpx solid #f4f4f4; 
  border: 1rpx solid rgba(19, 163, 139, 0.363);
}
.category-info{
  display: inline-block;
  text-align: center;
  /* position: relative; */
  margin-top: 20rpx;
  height: 150rpx;
  width: 25%;
}
.category-image{
  width: 95rpx;
  height: 95rpx;
}
.header-title{
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  font-weight:500;
}
.fenxiang{
  text-align: center;
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 31rpx;
  border: 1rpx solid rgba(19, 163, 139, 0.363);
}
.fenlei{
   display: flex;
  background: white;
  color: #6A6A6A;
  align-content: center;
  
}
.heard-search{
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  margin: 10rpx;
  height: 40rpx;
  width: 400rpx;
  background: white;
  border-radius:20rpx;
  line-height: 40rpx;

}
.heard-search-icon{
  height: 21rpx;
  width: 21rpx;
}
.heard{
  justify-content: space-around;
  display: flex;
  width: 100%;
  height: 80rpx;
  background: #FFC640;
}
.heard-location{
  position: relative;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  margin: 10rpx;
  width: 250rpx;
  height: 40rpx;
  background: #B38B2D;
  color: white;
  border-radius: 20rpx;
}
.heard-location-icon{
  position: absolute;
  top: 12rpx;
  height: 25rpx;
  width: 25rpx;
}
.sort{
  width:100%;
  height:100%;
  position: fixed;
  z-index:999;
  background-color:rgba(15, 15, 26, 0.7);
}
.overall-sort{
  width: 100%;
  background: white;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx; 
}
